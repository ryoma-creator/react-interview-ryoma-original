document.getElementById('userForm').addEventListener('submit', function(event) {
  event.preventDefault();
  
  // å…¥åŠ›å€¤ã‚’å–å¾—
  const name = document.getElementById('nameInput').value;
  const age = document.getElementById('ageInput').value;
  
