/*

問題2: IDで削除（Delete）

IDが一致するアイテムを削除

*/

function deleteById(items, id) {

  // ここにコードを書いてください

  return items.filter(item => item.id !== id);

}

// テスト

let items = [{id: 1, text: '買い物'}, {id: 2, text: '勉強'}];

console.log(deleteById(items, 1)); // [{id: 2, text: '勉強'}]

