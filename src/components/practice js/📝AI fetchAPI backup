function UserList() {

  const [users, setUsers] = useState([]);

  const [loading, setLoading] = useState(true);

  

  useEffect(() => {

    fetch('https://api.example.com/users')

      .then(response => response.json())

      .then(data => {

        setUsers(data);

        setLoading(false);

      });

  }, []);

  

